+    public void setOverheadName(String name) {
+        String oldName = getHandle().overheadName;
+
+        if (name == null) {
+            name = getName();
+        }
+
+        if (oldName.equals(name)) {
+            return;
+        }
+
+        if (name.length() > 16) {
+            throw new IllegalArgumentException("Overhead names can only be a maximum of 16 characters long");
